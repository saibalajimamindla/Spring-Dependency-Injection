<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans  
               http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<bean id="que"
		class="com.Spring.ConstructorInjection.collectionPrac.Question">
		<constructor-arg value="01" type="int"></constructor-arg>
		<constructor-arg value="what is java?"></constructor-arg>
		<constructor-arg>
			<list>
				<value>java is programing language</value>
				<value>java is platform</value>
				<value> java is an island in indinasia</value>
			</list>
		</constructor-arg>
	</bean>


	<bean id="emp"
		class="com.Spring.ConstructorInjection.collectionPrac.Employee">
		<constructor-arg value="101" type="int"></constructor-arg>
		<constructor-arg value="sai Balaji"></constructor-arg>
		<constructor-arg>
			<map>
				<entry key="hybris" value="ssl"></entry>
				<entry key="adobe aem" value="densply"></entry>
			</map>

		</constructor-arg>

	</bean>

</beans>